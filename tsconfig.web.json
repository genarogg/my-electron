{
  "extends": "@electron-toolkit/tsconfig/tsconfig.web.json",
  "include": [
    "src/renderer/src/env.d.ts",
    "src/renderer/src/**/*",
    "src/preload/*.d.ts",
  ],
  "compilerOptions": {
    "composite": true,
    "jsx": "react-jsx",
    "types": ["electron-vite/node"],
    "baseUrl": "./src/renderer/src/",
    "paths": {
      "@renderer/*": ["*"],
      "@redux": ["components/state/Redux.tsx"],
      "@provider": ["components/state/Provider.tsx"],

      "@form": ["components/nano/form/index.tsx"],
      "@btn": ["components/nano/btn/index.tsx"],
      "@nano": ["components/nano/index.tsx"],

      "@formSkeleton" : ["components/nano/skeleton/formSkeleton.tsx"],

      "@electron": ["components/electron/index.tsx"],
    }
  }
}