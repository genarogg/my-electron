{
  "extends": "@electron-toolkit/tsconfig/tsconfig.web.json",
  "include": [
    "src/renderer/src/env.d.ts",
    "src/renderer/src/**/*",
    "src/preload/*.d.ts",
  ],
  "compilerOptions": {
    "composite": true,
    "jsx": "react-jsx",
    "types": ["electron-vite/node"],
    "baseUrl": "./src/renderer/src/",
    "paths": {
      "@renderer/*": ["*"],
      "@redux": ["components/state/Redux.tsx"],
      "@provider": ["components/state/Provider.tsx"]
    }
  }
}